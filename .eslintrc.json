{
    "ignorePatterns": [ "public/js/*.js", "node_modules/**", "out/**" ],
    "env": {
        "es6": true,
        "commonjs": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:apklab-frida/recommended"
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-redeclare": 1,
        "no-trailing-spaces": "error",
        "apklab-frida/check-file-jsdoc": 0,
        "no-tabs": 0
    }
}
